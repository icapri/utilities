{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
    },
    "ignorePatterns": [
        "lib/**/*",
        "src/**/*.js"
    ],
    "overrides": [
        {
            "files": [
                "*.js",
                "*.ts"
            ],
            "rules": {
                "one-var": "off"
            }
        }
    ]
}
